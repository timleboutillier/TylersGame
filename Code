<body>
  <h1>Matrix Phrase Challenge</h1>
  <div id="phrase">_______ __ ___ ______ __ ___ ____</div>
  
  <div>
    <input type="text" id="codeInput" placeholder="Enter code (e.g. 100110101)">
    <button onclick="submitCode()">Submit</button>
  </div>
  
  <div id="message"></div>
  
  <script>
    // Target phrase
    const phrase = "WELCOME TO THE DESERT OF THE REAL";

    // Codes mapped to letter sets
    const codes = {
      "100110101": ["W","O"], // Code 1
      "101001011": ["T","A"], // Code 2
      "111000111": ["D","R"], // Code 3
      "110011001": ["S","E"]  // Code 4
    };

    // Track unlocked letters
    let unlockedLetters = [];
    let usedCodes = [];

    // Render masked phrase
    function renderPhrase() {
      let display = "";
      for (let char of phrase) {
        if (char === " ") {
          display += " ";
        } else if (unlockedLetters.includes(char)) {
          display += char;
        } else {
          display += "_";
        }
      }
      document.getElementById("phrase").textContent = display;
    }

    function submitCode() {
      const input = document.getElementById("codeInput").value.trim();
      const msg = document.getElementById("message");

      if (!codes[input]) {
        msg.textContent = "Invalid code. Try again.";
        return;
      }

      if (usedCodes.includes(input)) {
        msg.textContent = "You already used this code.";
        return;
      }

      // Unlock new letters
      unlockedLetters = unlockedLetters.concat(codes[input]);
      usedCodes.push(input);
      msg.textContent = "Code accepted!";
      renderPhrase();
      document.getElementById("codeInput").value = "";
    }

    // Initialize display
    renderPhrase();
  </script>
</body>
</html>
